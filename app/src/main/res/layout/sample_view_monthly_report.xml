<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="16dp"
    android:weightSum="12"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_weight="2"
        android:background="@drawable/exp_img_bg"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="62dp"
        android:orientation="vertical">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/transactionIconIV"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/ic_restart" />
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:paddingLeft="16dp"
        android:paddingRight="18dp"
        android:layout_weight="10"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal"
            android:weightSum="12">

            <TextView
                android:id="@+id/reportExpenseFieldTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:text="ExpenseField"
                android:textAlignment="textStart"
                android:textColor="@color/black_2"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/reportExpenseAmountTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:text="- BDT 1100.00"
                android:textAlignment="textEnd"
                android:textColor="@color/red"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>

        <ProgressBar
            android:progressTint="@color/black_2"
            android:id="@+id/percentagePB"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:max="100"
            android:progress="50" />
    </LinearLayout>

</LinearLayout>