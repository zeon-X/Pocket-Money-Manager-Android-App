<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="none"
    android:layout_marginHorizontal="24dp"
    tools:context=".Report">


    <LinearLayout
        android:layout_marginTop="24dp"
        android:elevation="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_marginBottom="20dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/bg_gray"
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transaction Report" />


        <LinearLayout
            android:id="@+id/dailyReportLL"
            android:paddingHorizontal="24dp"
            android:gravity="center"
            android:background="@drawable/report_item_bg"
            android:backgroundTint="@color/black_2"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:textColor="@color/white"
                android:textStyle="normal"
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daily Report" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/monthlyReportLL"
            android:paddingHorizontal="24dp"
            android:gravity="center"
            android:background="@drawable/report_item_bg"
            android:backgroundTint="@color/black_2"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:textColor="@color/white"
                android:textStyle="normal"
                android:textSize="18dp"
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monthly Report" />


        </LinearLayout>

        <LinearLayout
            android:weightSum="12"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
             <LinearLayout
            android:layout_marginRight="6dp"
            android:layout_weight="6"
            android:id="@+id/lendReportLL"
            android:paddingHorizontal="24dp"
            android:gravity="center"
            android:background="@drawable/report_item_bg"
            android:backgroundTint="@color/black_2"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:orientation="vertical">

                 <ImageView
                     android:layout_width="24dp"
                     android:layout_height="24dp"
                     app:srcCompat="@drawable/lending" />

                 <TextView
                android:textColor="@color/white"
                android:textStyle="normal"
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lend" />


        </LinearLayout>
             <LinearLayout
            android:layout_marginLeft="6dp"
            android:layout_weight="6"
            android:id="@+id/borrowReportLL"
            android:paddingHorizontal="24dp"
            android:gravity="center"
            android:background="@drawable/report_item_bg"
            android:backgroundTint="@color/black_2"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:orientation="vertical">

                 <ImageView
                     android:layout_width="24dp"
                     android:layout_height="24dp"
                     app:srcCompat="@drawable/pic15" />

                 <TextView
                android:textColor="@color/white"
                android:textStyle="normal"
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Borrow" />


        </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:weightSum="12"
            android:layout_marginBottom="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_marginRight="6dp"
                android:layout_weight="6"
                android:id="@+id/resetEveryThingLL"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:background="@drawable/report_item_bg"
                android:backgroundTint="@color/black_2"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingHorizontal="24dp">

                <ImageView
                    android:tint="@color/red"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_reset" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reset"
                    android:textColor="@color/red"
                    android:textSize="18dp"
                    android:textStyle="bold" />


            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="6dp"
                android:layout_weight="6"
                android:id="@+id/aboutLL"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:background="@drawable/report_item_bg"
                android:backgroundTint="@color/black_2"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingHorizontal="24dp">

                <ImageView
                    android:tint="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_about" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:textStyle="bold" />


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/logoutLL"
            android:paddingHorizontal="24dp"
            android:gravity="center"
            android:background="@drawable/report_item_bg"
            android:backgroundTint="@color/black_2"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:textColor="@color/white"
                android:textStyle="normal"
                android:textSize="18dp"
                android:id="@+id/textView118"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout" /></LinearLayout>

    </LinearLayout>
</ScrollView>